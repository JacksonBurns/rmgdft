start_mode="LCAO Start"
#start_mode="Restart From File"
#start_mode="Start TDDFT"
input_wave_function_file = "Wave/wave"
output_wave_function_file = "Wave/wave"
input_tddft_file = "Wave/wave_tddft"
output_tddft_file = "Wave/wave_tddft"

verbose="true"
restart_tddft = "false"
#restart_tddft = "true"
max_scf_steps = "100"
tddft_steps = "10000"
poisson_solver="pfft"

unoccupied_states_per_kpoint = "50"

electric_field_vector="0.0 0.0 1.0"
electric_field_magnitude="0.00272"
#electric_field_magnitude="0.00"

energy_convergence_criterion = "1.00000000e-14"
rms_convergence_criterion = "1.00000000e-10"



wavefunction_grid ="64 64 64"
pseudopotential="
H  ../H.UPF
O  ../O.UPF
"

dipole_correction="1 1 1"

# Lattice constants in (x, y, z) directions
# a, b, c, cos(alpha), cos(beta), cos(gamma)

a_length="24." b_length="24." c_length="24."
atoms=
"
 O        9.0000000    9.000000     9.65808   1   
 H        9.0000000   10.436200    10.762926  1   
 H        9.0000000    7.563800    10.762926  1   
"


bravais_lattice_type = "Orthorhombic Primitive"

# *****Occupation *****

occupations_type = "Fermi Dirac"
occupation_electron_temperature_eV = "0.1"
occupation_number_mixing = "0.3"


length_units = "Bohr"
crds_units = "Bohr"
atomic_coordinate_type = "Absolute"


calculation_mode="TDDFT"
